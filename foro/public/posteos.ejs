<%- include('layout/head') %>
<div class="custom">
    <%- include('layout/header') %>
    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-2">
                <div class="row">
                <!-- Menu -->
                <%- include('layout/menu') %>
                <!-- // Menu -->
                </div>
            </div>
            <!-- Seccion -->
            <div class="col-lg-10">
                <table class="table table-sm table-bordered border-primary">
                    <thead>
                        <tr class="p-3">
                            <th class="py-3 px-3" colspan="3"><h6 class="d-flex justify-content-between align-items-center">
                                <span>Foro</span>
                                <a class="link-secondary" href="" aria-label="Add a new report">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-x-square-fill" viewBox="0 0 16 16">
                                        <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z"/>
                                    </svg>
                                </a>
                            </th>
                        </tr>
                        <tr class="p-3">
                            <th class="px-3 py-3 align-middle col-4"><a href="/"><< Volver</a></th>
                        </tr>
                    </thead>
                    <tbody id="posteos">
                    </tbody>
                    <tr class="p-3" id="responderPost">
                        <td class="py-3 px-3">
                            <form action="" method="post" id="formulario">
                                <p>
                                    <label for="post">Responder:</label>
                                    <textarea id="respuesta" class="form-control cs-text" rows="4" cols="50" name="respuesta"></textarea>
                                    <span id="respuestaSpan" class="validacion" style="display: none; color: red;"></span>
                                </p>
                                <div class="d-flex justify-content-end mt-3">
                                    <input type="submit" value="Enviar">
                                </div>
                            </form>
                        </td>
                    </tr>
                </table>             
            </div>
            <!-- // Seccion -->
        </div>

        <!-- Logueado -->
        <script src="js/logueado.js"></script>
        <!-- Posteos -->
        <script src="js/posteos.js"></script>
        <!-- Menu foro -->
        <script src="js/foro_menu.js"></script>

    </div>
</div>
<!-- // Main Content -->
<%- include('layout/footer') %>